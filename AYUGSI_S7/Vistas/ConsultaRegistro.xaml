<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AYUGSI_S7.Vistas.ConsultaRegistro">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="LISTA  ESTUDIANDTES"  FontSize="20" HorizontalTextAlignment="Center"/>

            <ListView x:Name="listaEstudiantes"  ItemSelected="listaEstudiantes_ItemSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Nombre}" Detail="{Binding Usuario}"/>


                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>